@model IEnumerable<Ticking_System_Interview_Exam.Models.Bug>

@{
    ViewData["Title"] = "RD_Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByUserId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BugId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BugId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BugId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
